{
    "compilerOptions": {
      "baseUrl": ".",
      "inlineSourceMap": true,
      "inlineSources": false,
      "module": "ESNext",
      "target": "es6",
      "allowJs": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "lib": [
        "dom",
        "es5",
        "scripthost",
        "es2015"
      ]
    },
    //"exclude": ["node_modules", "build", "dist", "example", "rollup.config.js"],
    "include": [
    "src",
    "src/**/*.ts",
    "@types/**/*.d.ts"
    ]
  }